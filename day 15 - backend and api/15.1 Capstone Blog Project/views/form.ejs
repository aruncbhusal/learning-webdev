<%- include('partials/header.ejs') %> <% if (post.title.length == 0) { %>
<h2 class="heading">Create A New Post</h2>
<% } else { %>
<h2 class="heading">Edit Post</h2>
<% } %>

<form action="/submit" method="post">
    <label for="post-title">Post Title</label>
    <input
        type="text"
        name="post-title"
        id="post-title"
        value="<%= post.title %>"
    />
    <input type="hidden" name="post-id" value="<%=post.id %>" />
    <label for="post-body">Post Body</label>
    <textarea name="post-body" id="post-body"><%= post.body %></textarea>
    <% if (post.title.length == 0) { %>
    <input type="submit" value="Create Post" class="submit-btn" />
    <% } else { %>
    <input type="submit" value="Edit Post" class="submit-btn" />
    <% } %>
</form>

<%- include('partials/footer.ejs') %>
